generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Asfi_Requests {
  id                   Int         @id @default(autoincrement())
  authority_position   String
  requesting_authority String
  request_code         String      @unique
  department           String
  process_type         ProccesType
  quantity_detail      Int
  sent_date            DateTime
  user_name            String
  Asfi_Files           Asfi_Files?
}

model Asfi_Files {
  id              Int           @id @default(autoincrement())
  file_name       String
  file_url        String
  asfi_request    Asfi_Requests @relation(fields: [asfi_request_id], references: [id])
  asfi_request_id Int           @unique
}

enum ProccesType {
  R
  S
}
